<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_search_margin">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/zoumo"
        android:scaleType="centerCrop"
        android:id="@+id/search_image"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="0dp">
        <TextView
            android:paddingLeft="@dimen/activity_search_margin"
            android:paddingBottom="@dimen/activity_search_margin"
            android:textColor="#de000000"
            android:id="@+id/search_title"
            android:text="小王子"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="@dimen/activity_search_margin"
            android:id="@+id/search_content"
            android:text="content"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="@dimen/activity_search_margin"
            android:paddingTop="@dimen/activity_search_margin"
            android:id="@+id/search_score"
            android:text="content"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#10000000"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

</LinearLayout>